<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/manageSheltersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Shelters" />

    <Button
        android:id="@+id/addPetsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Pets" />

    <Button
        android:id="@+id/viewAdoptionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Adoption Requests" />

    <Button
        android:id="@+id/managePetsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Pets" />

</LinearLayout>
