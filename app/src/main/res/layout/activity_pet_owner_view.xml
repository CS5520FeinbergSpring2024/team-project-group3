<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetOwnerViewActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/browseSheltersButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Browse Shelters"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.2"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/viewPetsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Pets"
        app:layout_constraintTop_toBottomOf="@+id/browseSheltersButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/learnAboutAdoptionButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Learn About Adoption"
        app:layout_constraintTop_toBottomOf="@+id/viewPetsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chatWithSheltersButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chat with Shelters"
        app:layout_constraintTop_toBottomOf="@+id/learnAboutAdoptionButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>



