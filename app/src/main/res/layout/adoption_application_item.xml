<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/applicantNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Applicant Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/applicantAddressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Applicant Address"
        android:textSize="16sp"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="16sp"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/petIdTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pet ID"
        android:textSize="16sp"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/shelterIdTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shelter ID"
        android:textSize="16sp"
        android:paddingBottom="4dp"/>


    <TextView
        android:id="@+id/userIdTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User ID"
        android:textSize="16sp"
        android:paddingBottom="4dp"/>
</LinearLayout>

